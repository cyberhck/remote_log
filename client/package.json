{
  "name": "ts-react-boilerplate",
  "description": "A universal boilerplate for building web applications w/ TypeScript, React, Redux and more.",
  "main": "build/server.js",
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm run build && npm run build:prod && npm run test:no-cache",
    "commitmsg": "validate-commit-msg",
    "clean": "rimraf build && rimraf .jest/cache",
    "prebuild": "npm run clean -s",
    "build": "cross-env NODE_ENV=dev webpack --config config/webpack/index.js",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "postbuild": "webpack --config config/webpack/server.js",
    "prestart": "npm run build -s",
    "start": "node build/server.js",
    "start:prod": "cross-env NODE_ENV=production npm start",
    "test": "jest",
    "test:no-cache": "jest --no-cache",
    "test:watch": "jest --watch",
    "lint": "tslint -t stylish  --project tsconfig.json \"src/**/**.ts*\" -e \"src/**/**.snap\"",
    "lint:fix": "npm run lint -s -- --fix"
  },
  "author": "Crazy Factory <dev@crazy-factory.com>",
  "homepage": "https://github.com/crazyfactory/ts-react-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyfactory/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/crazyfactory/ts-react-boilerplate/issues"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "webpack",
    "universal",
    "isomorphic",
    "starter",
    "kit",
    "boilerplate",
    "hot reload",
    "react-hot-loader",
    "enzyme",
    "jest"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/base16": "^1.0.1",
    "@types/enzyme": "^3.1.12",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/prop-types": "^15.5.3",
    "@types/raven-js": "^3.10.0",
    "@types/react": "^16.4.6",
    "@types/react-addons-test-utils": "^0.14.21",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.6",
    "@types/react-redux": "^6.0.4",
    "@types/redux-devtools-dock-monitor": "^1.1.32",
    "@types/redux-devtools-log-monitor": "^1.0.33",
    "@types/redux-logger": "^3.0.6",
    "@types/webpack": "^4.4.7",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jest-enzyme": "^6.0.2",
    "react-addons-test-utils": "^15.6.2",
    "react-hot-loader": "^4.3.3",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "tslint-microsoft-contrib": "^5.1.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "validate-commit-msg": "^2.14.0",
    "wallaby-webpack": "^3.9.10",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "dependencies": {
    "@crazyfactory/tinka": "^1.7.4",
    "@types/socket.io-client": "^1.4.32",
    "chalk": "^2.4.1",
    "csstips": "^0.3.0",
    "csx": "^9.0.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.6.2",
    "raven-for-redux": "^1.3.1",
    "raven-js": "^3.26.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router5": "^6.0.4",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.0",
    "redux-router5": "^6.0.2",
    "redux-saga": "^0.16.0",
    "router5": "^6.3.0",
    "serve-favicon": "^2.5.0",
    "socket.io-client": "^2.1.1",
    "typestyle": "^2.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupTestFrameworkScriptFile": "./src/app/helpers/JestBootstrap.ts"
  }
}
